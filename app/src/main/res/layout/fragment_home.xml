<?xml version="1.0" encoding="utf-8"?>

<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".HomeFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout"
    android:layout_marginTop="0dp">

    <TextView
        android:id="@+id/dashboard"
        android:layout_width="206dp"
        android:layout_height="54dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/Image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/Image1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/dashboard"/>

    <TextView
        android:id="@+id/ann1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="4dp"
        android:text="Annonces"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Image1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:id="@+id/row1"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:padding="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ann1">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/CardL1_1"

            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:id="@+id/activitesemain"
                android:layout_width="match_parent"
                android:background="#5F9EA0"
                android:layout_height="157dp">

                <TextView
                    android:id="@+id/s1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="31dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="-26dp"
                    android:text="Dernier Semaine"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/anncount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="40dp"
                    android:text="42"

                    android:textColor="@color/white"
                    android:textSize="50sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/CardL1_2"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:id="@+id/R2_L1"
                android:layout_width="match_parent"
                android:background="#C4B454	"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/jourann"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="5dp"
                    android:text="Aujourd'huit"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/anncountj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="16"

                    android:textAlignment="center"

                    android:textColor="@color/white"
                    android:textSize="50sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/txtrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:text="Rapports"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:id="@+id/row2"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"

        android:padding="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtrap">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/CardL2_1"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp">

        <RelativeLayout
            android:id="@+id/activite"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:background="#5F8575	">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="48dp"
                android:text="Dernier 7 jours"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rapcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="16"
                android:textAlignment="center"

                android:textColor="@color/white"
                android:textSize="50sp" />


        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/CardL2_2"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:id="@+id/R2_L2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40826D">

                <TextView
                    android:id="@+id/Name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="48dp"
                    android:text="Aujourd'huit"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rapcountj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="16"
                    android:textAlignment="center"

                    android:textColor="@color/white"
                    android:textSize="50sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="250dp"
        android:id="@+id/row3"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row2">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8A9A5B	"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pharmName5"
                    android:text="Total"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:id="@+id/L3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/CardL3_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="20dp">

                        <RelativeLayout
                            android:id="@+id/R1_L3"
                            android:layout_width="match_parent"
                            android:layout_height="159dp">

                            <TextView
                                android:id="@+id/txttoan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Annonces"
                                android:textAlignment="center"

                                android:textColor="#8A9A5B"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/counttotalan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="16"
                                android:textAlignment="center"

                                android:textColor="#8A9A5B"
                                android:textSize="50sp" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/CardL3_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"

                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:id="@+id/R2_L3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="Rapports"
                                android:textAlignment="center"

                                android:textColor="#8A9A5B"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/counttotalra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="16"
                                android:textAlignment="center"

                                android:textColor="#8A9A5B"
                                android:textSize="50sp" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>